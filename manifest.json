  {
    "name": "Charity Evaluator",
    "version": "1.0",
    "description": "Extension to assess charities based on spending and value.",
    "manifest_version": 2,
    "permissions": ["activeTab", "declarativeContent"],
    "background": {
      "scripts": ["popup.js", "background.js", "charitychecker.js"],
      "persistent": false
    },
    
    "browser_action": {
      "default_popup": "charitychecker.html",
      "default_icon": {
	"16": "images/CharityLogo16.png",
        "32": "images/CharityLogo32.png",
        "48": "images/CharityLogo48.png",
        "128": "images/CharityLogo128.png"
      }
    },

    "icons": {
      "16": "images/CharityLogo16.png",
      "32": "images/CharityLogo32.png",
      "48": "images/CharityLogo48.png",
      "128": "images/CharityLogo128.png"
 
    }
  }
